---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import SectionTitle from '../components/SectionTitle.astro';
import TestimonialCard from '../components/TestimonialCard.astro';

import hollylehman from '../assets/testimonials/holly-lehman.jpeg';

const testimonials = [
  {
   content: "Simon is someone I genuinely respect and admire. He taught himself to code and has since dedicated his career to helping others do the same. With a charismatic ability to make technology engaging and accessible, Simon brings tech to life in a way thatâ€™s both fun and inspiring.",
    author: "Holly Lehman",
    role: "Sr. Community Manager",
    company: "Omnissa Community Program",
    imageUrl: hollylehman,
    socialPlatform: "linkedin",
    socialLink: "https://www.linkedin.com/in/codewithsimon/details/recommendations/"
  },
  {
    content: "Working with Stephen on HackIndia was transformative for our developer community. His vision and leadership helped create one of India's most impactful tech events.",
    author: "Raj Patel",
    role: "Developer Relations Lead",
    company: "Innovation Labs",
    imageUrl: "https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg",
    socialPlatform: "twitter",
    socialLink: "#"
  },
  {
    content: "Stephen's workshops on cloud architecture fundamentally changed how our team approaches system design. His practical insights and real-world examples were invaluable.",
    author: "Emily Rodriguez",
    role: "Engineering Director",
    company: "CloudScale Solutions",
    imageUrl: "https://images.pexels.com/photos/415829/pexels-photo-415829.jpeg",
    socialPlatform: "linkedin",
    socialLink: "#"
  }
];

// Featured social media embeds
const socialEmbeds = {
  twitter: [
    '<blockquote class="twitter-tweet"><p lang="en" dir="ltr">Incredible session by <a href="#">@StephenSimon</a> at #MSBuild! His insights on Azure architecture patterns were game-changing.</p>&mdash; Tech Conference (@TechConf) <a href="#">May 10, 2024</a></blockquote>',
    '<blockquote class="twitter-tweet"><p lang="en" dir="ltr">Just attended <a href="#">@StephenSimon</a>\'s workshop on cloud-native development. Mind-blowing content and delivery!</p>&mdash; Developer Community (@DevComm) <a href="#">April 15, 2024</a></blockquote>'
  ]
};
---

<Layout 
  title="Testimonials - Stephen Simon"
  description="What industry leaders and community members say about Stephen Simon's speaking engagements, workshops, and community initiatives."
>
  <Hero 
    title="Testimonials" 
    subtitle="Feedback and recommendations from industry leaders and community members"
    backgroundImage="https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg"
  />

  <!-- Written Testimonials -->
  <section class="py-20">
    <div class="container mx-auto px-4 lg:px-8">
      <SectionTitle 
        title="What People Say"
        subtitle="Testimonials from clients, event organizers, and community members"
        alignment="center"
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
        {testimonials.map(testimonial => (
          <TestimonialCard {...testimonial} />
        ))}
      </div>
    </div>
  </section>

  <!-- Social Media Testimonials -->
  <section class="py-20 bg-gray-50 dark:bg-dark-900">
    <div class="container mx-auto px-4 lg:px-8">
      <SectionTitle 
        title="Social Media Highlights"
        subtitle="What people are saying on Twitter"
        alignment="center"
      />
      
      <div class="max-w-3xl mx-auto mt-12">
        <div class="space-y-6">
          {socialEmbeds.twitter.map(embed => (
            <div class="bg-white dark:bg-dark-700 rounded-xl p-6 shadow-lg" set:html={embed} />
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-600 text-white">
    <div class="container mx-auto px-4 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Work Together?</h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Let's discuss how I can bring value to your next event or project.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contact" class="py-3 px-8 bg-white text-primary-600 hover:bg-gray-100 font-medium rounded-lg transition-colors">
          Get in Touch
        </a>
        <a href="/events" class="py-3 px-8 bg-primary-700 hover:bg-primary-800 text-white font-medium rounded-lg transition-colors">
          View Speaking Calendar
        </a>
      </div>
    </div>
  </section>
</Layout>

<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>