</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tableBody = document.getElementById('eventsTableBody');
    const paginationButtons = document.querySelectorAll('[data-page]');
    const itemsPerPage = 5;
    const events = {morePastEvents};

    function displayEvents(page) {
      const start = (page - 1) * itemsPerPage;
      const end = start + itemsPerPage;
      const pageEvents = events.slice(start, end);

      if (tableBody) {
        tableBody.innerHTML = pageEvents.map(event => `
          <tr class="hover:bg-dark-700 transition-colors">
            <td class="px-6 py-4 text-gray-300">${event.date}</td>
            <td class="px-6 py-4 text-white font-medium">
              <a 
                href="${event.url}" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="hover:text-primary-400 transition-colors"
              >
                ${event.title}
              </a>
            </td>
            <td class="px-6 py-4 text-gray-300">${event.location}</td>
            <td class="px-6 py-4 text-gray-300">${event.topic}</td>
            <td class="px-6 py-4">
              <span class="px-3 py-1 text-sm rounded-full bg-primary-900/30 text-primary-400">
                ${event.type}
              </span>
            </td>
          </tr>
        `).join('');
      }

      // Update active state of pagination buttons
      paginationButtons.forEach(button => {
        const buttonPage = parseInt(button.dataset.page);
        if (buttonPage === page) {
          button.classList.remove('bg-dark-700', 'text-gray-300');
          button.classList.add('bg-primary-600', 'text-white');
        } else {
          button.classList.remove('bg-primary-600', 'text-white');
          button.classList.add('bg-dark-700', 'text-gray-300');
        }
      });
    }

    // Add click event listeners to pagination buttons
    paginationButtons.forEach(button => {
      button.addEventListener('click', () => {
        const page = parseInt(button.dataset.page);
        displayEvents(page);
      });
    });
  });
</script>