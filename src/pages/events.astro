    <div class="container mx-auto px-4 lg:px-8">
      <SectionTitle 
        title="Speaking Topics" 
        subtitle="Areas of expertise that I frequently present on"
        alignment="center"
      />
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
        <div class="bg-white dark:bg-dark-700 p-8 rounded-xl shadow-lg" data-aos="fade-up" data-aos-delay="0">
