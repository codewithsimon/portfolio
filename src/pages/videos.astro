// Community and Leadership Videos
const communityVideos = [
  {
    title: "Building Developer Communities",
    description: "Strategies for building and growing successful developer communities.",
    thumbnail: "https://images.pexels.com/photos/1181622/pexels-photo-1181622.jpeg",
    url: "https://youtube.com/watch?v=example10"
  },
  {
    title: "Technology Leadership",
    description: "Insights on technology leadership and team management.",
    thumbnail: "https://images.pexels.com/photos/1181677/pexels-photo-1181677.jpeg",
