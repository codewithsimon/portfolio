    title="Video Content" 
    subtitle="Technical talks, tutorials, and insights on modern technology"
    backgroundImage="https://images.pexels.com/photos/2833037/pexels-photo-2833037.jpeg"
  />

  <!-- Video Categories Navigation -->
  <div class="sticky top-24 z-30 bg-dark-900/95 backdrop-blur-sm py-4 border-b border-dark-700">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="flex gap-4 overflow-x-auto pb-2 scrollbar-hide">
        <a href="#adashofdotnet" class="px-4 py-2 bg-dark-800 hover:bg-dark-700 text-white rounded-full whitespace-nowrap transition-colors">A Dash of .Net Show</a>
        <a href="#azureforsure" class="px-4 py-2 bg-dark-800 hover:bg-dark-700 text-white rounded-full whitespace-nowrap transition-colors">Azure for Sure</a>        
      </div>
    </div>
  </div>
 

  <!-- .NET Development Section -->
  <section id="adashofdotnet" class="py-20 bg-dark-900">
    <div class="container mx-auto px-4 lg:px-8">
      <SectionTitle 
        title="A Dash of .Net Show" 
        subtitle="A show that brings you quick and engaging insights into the vibrant world of C# and .NET development"
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
        {aDashOfDotNetVideos.map((video, index) => (
          <div 
            class="bg-dark-800 rounded-xl overflow-hidden shadow-lg"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <a href={video.url} target="_blank" rel="noopener noreferrer" class="block">
              <div class="relative aspect-video">
                <Image 
                  src={video.thumbnail} 
                  alt={video.title}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold text-white mb-3">{video.title}</h3>
                <p class="text-gray-400 text-sm line-clamp-2">{video.description}</p>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

   <!-- Azure for Sure Section -->
  <section id="azureforsure" class="py-20">
    <div class="container mx-auto px-4 lg:px-8">
      <SectionTitle 
        title="Azure for Sure Show" 
        subtitle="Deep dives into cloud architecture and Azure services"
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
