---
interface Props {
  title: string;
  subtitle?: string;
  alignment?: 'left' | 'center' | 'right';
}

const { 
  title, 
  subtitle = "", 
  alignment = "left" 
} = Astro.props;

const alignmentClasses = {
  left: "text-left",
  center: "text-center mx-auto",
  right: "text-right ml-auto"
};

const titleClasses = `${alignmentClasses[alignment]} max-w-3xl`;
---

<div class={titleClasses} data-aos="fade-up">
  <h2 class="text-3xl md:text-4xl font-bold text-dark-800 dark:text-white mb-4">
    {title}
  </h2>
  {subtitle && (
    <p class="text-lg text-dark-600 dark:text-gray-300 mb-8">
      {subtitle}
    </p>
  )}
</div>