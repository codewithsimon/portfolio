---

import globalai from '/src/assets/companies/Global-AI-Community-Logo.png';
import appwrite from '/src/assets/companies/Appwrite-Logo.png';
import csharpcorner from '/src/assets/companies/C-Sharp-Corner-Logo.png';
import csharptv from '/src/assets/companies/CSharp-TV-Logo.png';
import streamyard from '/src/assets/companies/StreamYard-Logo.png';
import alchemy from '/src/assets/companies/Alchemy-Logo.png';
import { Image } from 'astro:assets';

// Sample client logos - Replace with actual client logos
const clients = [
  {
    name: "Global AI Community",
    logo: globalai
  },  
  {
    name: "Appwrite",
    logo: appwrite
  },  
  {
    name: "CSharp Corner",
    logo: csharpcorner
  },  
  {
    name: "CSharp TV",
    logo: csharptv
  },  
  {
    name: "StreamYard",
    logo: streamyard
  },  
  {
    name: "Alchemy",
    logo: alchemy
  },  
];
---

<div class="py-20 bg-dark-800">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-3xl font-bold text-white mb-4">Brands & Communities I've Collaborated With</h2>
      <p class="text-gray-300">From speaking engagements and conference partnerships to community-driven initiatives, here are some of the incredible organizations I've had the privilege to work with and contribute to</p>
    </div>
    
    <div class="swiper client-logos" data-aos="fade-up">
      <div class="swiper-wrapper">
        {clients.map(client => (
          <div class="swiper-slide flex items-center justify-center">
            <Image 
              src={client.logo} 
              alt={client.name}
              class="h-12 object-contain filter brightness-0 invert opacity-50 hover:opacity-75 transition-opacity"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<script>
  import Swiper from 'swiper';
  import { Navigation, Autoplay } from 'swiper/modules';
  import 'swiper/css';

  function initSwiper() {
    const swiper = new Swiper('.client-logos', {
      modules: [Navigation, Autoplay],
      slidesPerView: 5,
      spaceBetween: 30,
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      breakpoints: {
        320: {
          slidesPerView: 2,
        },
        480: {
          slidesPerView: 3,
        },
        640: {
          slidesPerView: 4,
        },
        768: {
          slidesPerView: 5,
        },
        1024: {
          slidesPerView: 6,
        },
      },
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initSwiper);

  // Initialize on view transitions
  document.addEventListener('astro:after-swap', initSwiper);
</script>