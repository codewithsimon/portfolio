---
interface Props {
  title: string;
  date: string;
  category: string;
  excerpt: string;
  imageUrl: string;
  slug: string;
}

const { 
  title, 
  date, 
  category, 
  excerpt, 
  imageUrl, 
  slug 
} = Astro.props;
---

<article class="bg-white dark:bg-dark-700 rounded-xl overflow-hidden shadow-lg transition-all hover:shadow-xl">
  <a href={`/blog/${slug}`} class="block h-56 overflow-hidden">
   <img 
      src={imageUrl} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
    />
  </a>
  
  <div class="p-6">
    <div class="flex justify-between items-center mb-3">
      <span class="text-primary-600 dark:text-primary-400 font-medium text-sm">
        {category}
      </span>
      <span class="text-dark-500 dark:text-gray-400 text-sm">
        {date}
      </span>
    </div>
    
    <h3 class="text-xl font-semibold text-dark-800 dark:text-white mb-3">
      <a href={`/blog/${slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
        {title}
      </a>
    </h3>
    
    <p class="text-dark-600 dark:text-gray-300 mb-4 line-clamp-3">
      {excerpt}
    </p>
    
    <a 
      href={`/blog/${slug}`} 
      class="inline-flex items-center text-primary-600 dark:text-primary-400 font-medium hover:text-primary-700 dark:hover:text-primary-500 transition-colors"
    >
      Read More
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </a>
  </div>
</article>