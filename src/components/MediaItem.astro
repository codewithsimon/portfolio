---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  downloadUrl: string;
  format: string;
  fileSize: string;
}

const { 
  title, 
  description, 
  imageUrl, 
  downloadUrl, 
  format,
  fileSize 
} = Astro.props;
---

<div class="bg-white dark:bg-dark-700 rounded-xl overflow-hidden shadow-lg transition-all hover:shadow-xl" data-aos="fade-up">
  <div class="relative">
    <img 
      src={imageUrl} 
      alt={title}
      class="w-full aspect-[4/3] object-cover"
    />
    <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition-opacity flex items-center justify-center opacity-0 hover:opacity-100">
      <a 
        href={imageUrl} 
        target="_blank" 
        class="bg-white text-dark-800 py-2 px-4 rounded-lg mr-2 hover:bg-gray-100 transition-colors"
      >
        Preview
      </a>
      <a 
        href={downloadUrl} 
        download
        class="bg-primary-600 text-white py-2 px-4 rounded-lg hover:bg-primary-700 transition-colors"
      >
        Download
      </a>
    </div>
  </div>
  
  <div class="p-6">
    <h3 class="text-xl font-semibold text-dark-800 dark:text-white mb-2">
      {title}
    </h3>
    <p class="text-dark-600 dark:text-gray-300 mb-4">
      {description}
    </p>
    
    <div class="flex justify-between items-center">
      <div class="flex items-center text-dark-500 dark:text-gray-400 text-sm">
        <span class="mr-4">{format}</span>
        <span>{fileSize}</span>
      </div>
      
      <a 
        href={downloadUrl} 
        download
        class="inline-flex items-center text-primary-600 dark:text-primary-400 font-medium hover:text-primary-700 dark:hover:text-primary-500 transition-colors"
      >
        Download
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</div>