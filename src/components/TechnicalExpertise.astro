---
import { Image } from 'astro:assets';
import openai from '/src/assets/technologies/Open-AI-Logo.png';
import python from '/src/assets/technologies/Python-Logo.png';
import azure from '/src/assets/technologies/Azure-Logo.png';
import gemini from '/src/assets/technologies/Gemini-Logo.png';
import react from '/src/assets/technologies/React-Logo.png';
import github from '/src/assets/technologies/Github-Logo.png';
import fastapi from '/src/assets/technologies/Fast-API-Logo.png';
import terraform from '/src/assets/technologies/Terraform-Logo.png';

// Technical skills
const skills = [
  {
    name: "OpenAI",
    logo: openai
  },  
  {
    name: "Python",
    logo: python
  },  
  {
    name: "Azure",
    logo: azure
  },  
  {
    name: "Gemini",
    logo: gemini
  },  
  {
    name: "React",
    logo: react
  },  
  {
    name: "Github",
    logo: github
  },  
  {
    name: "Fast API",
    logo: fastapi
  },  
  {
    name: "Terraform",
    logo: terraform
  },  
];
---

<div class="py-32 bg-gradient-to-b from-dark-800 to-dark-900">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-3xl font-bold text-white mb-4">Cloud. AI. Code.</h2>
      <p class="text-gray-300">I specialize in combining modern cloud infrastructure with AI tooling to create scalable, efficient, and impactful solutions â€” here are the tools and platforms I use every day.</p>
    </div>
    
    <div class="swiper tech-logos" data-aos="fade-up">
      <div class="swiper-wrapper">
        {skills.map(skill => (
          <div class="swiper-slide flex items-center justify-center">
            <div class="text-center">
              <Image 
                src={skill.logo} 
                alt={skill.name}
                class="h-12 mx-auto object-contain filter brightness-0 invert opacity-50 hover:opacity-75 transition-opacity"
              />
              <p class="mt-2 text-sm text-gray-400">{skill.name}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<script>
  import Swiper from 'swiper';
  import { Navigation, Autoplay } from 'swiper/modules';
  import 'swiper/css';

  function initSwiper() {
    const swiper = new Swiper('.tech-logos', {
      modules: [Navigation, Autoplay],
      slidesPerView: 5,
      spaceBetween: 30,
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      breakpoints: {
        320: {
          slidesPerView: 2,
        },
        480: {
          slidesPerView: 3,
        },
        640: {
          slidesPerView: 4,
        },
        768: {
          slidesPerView: 5,
        },
        1024: {
          slidesPerView: 6,
        },
      },
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initSwiper);

  // Initialize on view transitions
  document.addEventListener('astro:after-swap', initSwiper);
</script>